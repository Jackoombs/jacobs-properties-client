---
import Layout from "../layouts/Layout.astro";
import PropertyGrid from "../components/Property/PropertyGrid.astro";
import PageTitle from "../components/General/PageTitle.astro";
const res = await fetch("https://jacobs-server.onrender.com/properties/sales")
const propertyList = await res.json()

---

<Layout>

	<div class="flex justify-center bg-slate-200 py-6 px-2 md:px-8 lg:px-16">
		<div class="w-max">
			<PageTitle title="For Sale" />
			<PropertyGrid propertyList={propertyList} />
		</div>
	</div>

</Layout>